<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="by.bstu.sinjakkirill.basejava.lab_3.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/inputKeyeditText"
        android:layout_alignParentEnd="true"
        android:background="@color/colorEditText"
        android:textSize="25dp"/>

    <TextView
        android:text="Значение"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputKeyeditText"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorTextView"
        android:id="@+id/textView2"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:id="@+id/inputValueeditText"
        android:layout_alignParentEnd="true"
        android:background="@color/colorEditText"
        android:textSize="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputValueeditText"
        android:id="@+id/button"
        android:layout_alignParentEnd="true"
        android:text="СОХРАНИТЬ"
        android:layout_alignParentStart="true"
        android:onClick="saveData"/>

    <TextView
        android:text="Ключ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textColor="@color/colorTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ключ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="51dp"
        android:textSize="25dp"
        android:textColor="@color/colorTextView"
        android:id="@+id/textView5" />

    <TextView
        android:text="Значение"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outputKeyEditText"
        android:textSize="25dp"
        android:textColor="@color/colorTextView"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:id="@+id/outputValueeditText"
        android:layout_alignParentEnd="true"
        android:background="@color/colorEditText"
        android:textSize="25dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TesttextView"
        android:layout_below="@+id/outputValueeditText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/outputKeyEditText"
        android:background="@color/colorEditText"
        android:textSize="25dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
